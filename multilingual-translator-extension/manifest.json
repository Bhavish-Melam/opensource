{
    "manifest_version": 3,
    "name": "Multilingual Translator",
    "version": "2.0",
    "description": "Translate web pages with customization, glossaries, and more.",
    "permissions": ["activeTab", "scripting", "storage", "contextMenus"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "options_page": "options.html",
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  